@model GlobalGames.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "ChangeUser";
    Layout = null;
}
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/styles.css" />

<h1 class="text-center">Change User</h1>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="text-center">

                <div class="form-group">
                    <label asp-for="FirstName">First Name</label>
                    <div class="input-group mx-auto" style="max-width: 300px;">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-warning"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="LastName">Last Name</label>
                    <div class="input-group mx-auto" style="max-width: 300px;">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-warning"></span>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a asp-action="ChangePassword" class="btn btn-success">Change Password</a>
                </div>

                <div class="text-success">@ViewBag.UserMessage</div>
            </div>
        </form>
    </div>
</div>

<footer class="login-footer text-white mt-auto">
    <div class="container">
        <p class="text-center mb-0">Global Games, Todos os direitos reservados &copy; @DateTime.Now.Year</p>
    </div>
</footer>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
