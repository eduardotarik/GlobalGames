@model GlobalGames.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/styles.css" />

<h1 class="text-center">Login</h1>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>

            <div class="text-center">

                <div class="form-group">
                    <label asp-for="Username">Username</label>
                    <div class="input-group mx-auto" style="max-width: 300px;">
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-warning"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <div class="input-group mx-auto" style="max-width: 300px;">
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Remember Me?</label>
                    </div>
                    <span asp-validation-for="RememberMe" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-success" />
                    <a asp-action="Register" class="btn btn-primary">Register New User</a>
                </div>

            </div>
        </form>
    </div>
</div>

<footer class="login-footer text-white mt-auto">
    <div class="container">
        <p class="text-center mb-0">Global Games, Todos os direitos reservados &copy; @DateTime.Now.Year</p>
    </div>
</footer>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
